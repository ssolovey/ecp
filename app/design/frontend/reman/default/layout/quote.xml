<layout version="0.1.0">
	<!-- Quick Quote Content-->
	<quote_index_index>
		<!-- 
			Add Reman Assistant Static block to Online Quote Layout
			This static block can be changed for Admin -> CMS -> Static Blocks -> Assistant banner  
		-->
		<reference name="right">
			<block type="cms/block" name="reman_assistant_banner" before="-">
				<action method="setBlockId"><block_id>reman_assistant_banner</block_id></action>
			</block>
		</reference>
		
		<!--Set Two column layout-->
		<reference name="root">
			<action method="setTemplate">
				<template>page/2columns-right.phtml</template>
			</action>
		</reference>
		<!-- Add Page title-->
		<reference name="head">
			 <action method="setTitle" translate="title" module="quote">
				  <title>Quick Quote</title>
			 </action>
		</reference>
		<!--Add Quote Main content-->
		<reference name="content">
			<block type="quote/quote" name="quote" template="quote/quote.phtml" />
		</reference>
	</quote_index_index>
	<!--Quick Quote Ajax action for product load-->
	<quote_index_product> 
		<!--<block type="quote/quote" name="product" output="toHtml" template="quote/product.phtml" />-->
		
		<remove name="right"/>
    	<remove name="left"/>
		<block type="catalog/product_view" name="root" output="toHtml" template="catalog/product/view.phtml">
		 	<block type="catalog/product_view_media" name="product.info.media" as="media" template="catalog/product/view/media.phtml"/>
		</block>
		
		
	</quote_index_product>
	<!--Quick Quote Ajax action for product store inventory info load-->
	<quote_index_invent>
		<block type="quote/quote" name="quote" output="toHtml"  template="quote/invent.phtml" />
	</quote_index_invent>
</layout>