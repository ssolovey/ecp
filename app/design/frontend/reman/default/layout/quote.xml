<layout version="0.1.0">
	<!-- Quick Quote Content-->
	<quote_index_index>
		<!-- Add Page title-->
		<reference name="head">
			 <action method="setTitle" translate="title" module="quote">
				  <title>Quick Quote</title>
			 </action>
		</reference>
		<!--Add Quote Main content-->
		<reference name="content">
			<block type="quote/quote" name="quote" template="quote/quote.phtml" />
			<!--<block type="quote/quote" name="quote" template="quote/order.phtml" />-->
		</reference>
	</quote_index_index>
	<!--Quick Quote Ajax action for product load-->
	<quote_index_product> 
		<remove name="right"/>
    	<remove name="left"/>
		<block type="catalog/product_view" name="root" output="toHtml" template="catalog/product/view.phtml">
		 	<block type="catalog/product_view_media" name="product.info.media" as="media" template="catalog/product/view/media.phtml"/>
		</block>
	</quote_index_product>
	<!--Quick Quote Ajax action for product store inventory info load-->
	<quote_index_invent>
		<block type="quote/quote" name="quote" output="toHtml"  template="quote/invent.phtml" />
	</quote_index_invent>
	
	<!--Quick Quote Ajax action for estimate shipping page load-->
	<quote_index_shipping>
		<block type="quote/quote" name="quote" output="toHtml"  template="quote/shipping.phtml" />
	</quote_index_shipping>
	
</layout>