<?xml version="1.0" encoding="utf-8"?>

<layout version="0.1.0">
	<!-- Quick Quote Content-->
	<quote_index_index>
		<reference name="head">
			 <action method="setTitle" translate="title" module="quote">
				  <title>Quick Quote</title>
			 </action>
		</reference>
		<reference name="content">
			<block type="quote/quote" name="quote" template="quote/quote.phtml" />
		</reference>
	</quote_index_index>
	<!--Quick Quote Ajax action for product load-->
	<quote_index_product>
		 <reference name="content">
				<block type="quote/quote" name="quote" output="toHtml" template="quote/product.phtml" />
		 </reference>
	</quote_index_product>
</layout>